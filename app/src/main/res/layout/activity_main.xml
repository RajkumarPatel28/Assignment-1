<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/life_cycle_methods_demonstration"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.rajkumarpatel_ceng319lab1_ex1.FragmentUp"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        tools:layout="@layout/fragment_up" />

    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.rajkumarpatel_ceng319lab1_ex1.FragmentDown"
        android:layout_width="match_parent"
        android:layout_height="373dp"
        tools:layout="@layout/fragment_down" />

</LinearLayout>